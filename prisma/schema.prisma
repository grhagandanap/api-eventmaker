generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Events {
  id String @id @default(cuid())
  name String
  dateTime String 
  location String
  description String
  organizer String
  participants Participants[]
}

model Participants {
  id String @id @default(cuid())
  name String
  email String
  eventId String
  event Events @relation(fields: [eventId], references: [id])
}